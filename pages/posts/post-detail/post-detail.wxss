.detail-container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 450rpx;
  position: relative;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  margin-left: -51rpx;
  left: 50%;
  top: 170rpx;
  opacity: 0.6;
}

.author-date {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  margin-left: 32rpx;
}

.author {
  color: #666;
  font-size: 30rpx;
  margin-left: 28rpx;
}

.const-text {
  color: #999;
  font-size: 25rpx;
  margin-left: 20rpx;
}

.date {
  color: #999;
  vertical-align: middle;
  font-size: 25rpx;
  margin-left: 35rpx;
}

.title {
  color: #4b556c;
  font-size: 38rpx;
  font-weight: 700;
  letter-spacing: 2px;
  margin: 40rpx 45rpx;
}

.tool {
  margin: 0 40rpx;
}

.circle-image {
  float: right;
  
}

.collection {
  margin-right: 40rpx;
}

.circle-image image {
  width: 90rpx;
  height: 90rpx;
}

.horizon {
  width: 100%;
  height: 1px;
  background-color: #e5e5e5;
  margin-top: 45rpx;
  z-index: -99;

}

.detail {
  margin: 30rpx;
  font-size: 26rpx;
  color: #999;
  letter-spacing: 2px;
  line-height: 40rpx;
}